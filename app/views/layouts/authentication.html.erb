<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Tags -->
    <%= display_meta_tags site: "CodeFund" %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <!-- CDN Stylesheets -->
    <!-- Compressed Stylesheets -->
    <%= stylesheet_pack_tag "code_fund", media: "all", "data-turbolinks-track": "reload" %>
    <!-- Compressed JavaScripts -->
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload", defer: true %>
    <%= javascript_pack_tag "code_fund", "data-turbolinks-track": "reload", defer: true %>
  </head>
  <body style="padding-top: 0px !important;" data-referral-code="<%= session[:referral_code] %>">
    <div id="flash" data-controller="flash-messages"></div>
    <main class="auth">
      <%= yield %>
    </main>
  </body>
</html>
